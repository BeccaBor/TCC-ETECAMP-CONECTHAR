    }

    function configurarFechamentoModal() {
      // Fechar modal ao clicar no X
      document.querySelectorAll('.btn-fechar-modal').forEach(button => {
        button.addEventListener('click', function () {
          const modal = this.closest('.modal-overlay');
          if (modal) {
            fecharModal(modal.id);
          }
        });
      });

      // Fechar modal ao clicar no overlay (fora do conteúdo)
      document.querySelectorAll('.modal-overlay').forEach(modal => {
        modal.addEventListener('click', function (e) {
          if (e.target === this) {
            fecharModal(this.id);
          }
        });
      });

      // Fechar modal com tecla ESC
      document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape') {
          document.querySelectorAll('.modal-overlay').forEach(modal => {
            if (modal.style.display === 'flex') {
              fecharModal(modal.id);
            }
          });
        }
      });

      // Botões cancelar
      document.getElementById('btn-cancelar-provento')?.addEventListener('click', function () {
        fecharModal('modal-provento');
      });

      document.getElementById('btn-cancelar-desconto')?.addEventListener('click', function () {
        fecharModal('modal-desconto');
      });
    }


    // --- CLASSES ---
    class CalculadoraFolha {
      static calcularINSS(salarioBruto) {
        if (salarioBruto <= 1412.00) return salarioBruto * 0.075;
        if (salarioBruto <= 2666.68) return (salarioBruto * 0.09) - 21.18;
        if (salarioBruto <= 4000.03) return (salarioBruto * 0.12) - 101.18;
        if (salarioBruto <= 7786.02) return (salarioBruto * 0.14) - 181.18;
        return 908.85; // Teto
      }

      static calcularIRRF(salarioBase, dependentes = 0) {
        const deducaoDependente = 189.59 * dependentes;
        const baseCalculo = Math.max(0, salarioBase - deducaoDependente);

        if (baseCalculo <= 2259.20) return 0;
        if (baseCalculo <= 2826.65) return (baseCalculo * 0.075) - 169.44;
        if (baseCalculo <= 3751.05) return (baseCalculo * 0.15) - 381.44;
        if (baseCalculo <= 4664.68) return (baseCalculo * 0.225) - 662.77;
        return (baseCalculo * 0.275) - 896.00;
      }

      static calcularFGTS(salarioBruto) {
        return salarioBruto * 0.08;
      }
    }

    class GerenciadorHolerite {
      constructor(salarioBase, dependentes) {
        this.salarioBase = parseFloat(salarioBase) || 0;
        this.dependentes = parseInt(dependentes) || 0;
        this.proventos = [];
        this.descontos = [];
        this.baseINSS = 0;
        this.baseIRRF = 0;
        this.baseFGTS = 0;
        this.totalProventos = 0;
        this.totalDescontos = 0;
      }

      adicionarProvento(codigo, descricao, referencia, valor) {
        const valorFloat = parseFloat(valor);
        this.proventos.push({ codigo, descricao, referencia, valor: valorFloat });
        this.totalProventos += valorFloat;
      }

      adicionarDesconto(codigo, descricao, referencia, valor) {
        const valorFloat = parseFloat(valor);
        this.descontos.push({ codigo, descricao, referencia, valor: valorFloat });
        this.totalDescontos += valorFloat;
      }

      removerItem(tipo, indice) {
        if (tipo === 'provento') {
          this.proventos.splice(indice, 1);
        } else if (tipo === 'desconto') {
          this.descontos.splice(indice, 1);
        }
        this.recalcular();
      }

      getTotalProventos() { return this.totalProventos; }
      getTotalDescontos() { return this.totalDescontos; }
      getSalarioLiquido() { return this.totalProventos - this.totalDescontos; }

      recalcular() {
        // Zera tudo, exceto itens manuais
        const proventosManuais = this.proventos.filter(p => p.codigo !== '001'); // 001 é o Salário Base
        const descontosManuais = this.descontos.filter(d => d.codigo !== '301' && d.codigo !== '302'); // 301=INSS, 302=IRRF

        this.proventos = [];
        this.descontos = [];
        this.totalProventos = 0;
        this.totalDescontos = 0;

        // 1. Adicionar Salário Base
        if (this.salarioBase > 0) {
          this.adicionarProvento('001', 'Salário Base', '30 dias', this.salarioBase);
        }

        // 2. Adicionar proventos manuais (mantidos)
        proventosManuais.forEach(p => this.adicionarProvento(p.codigo, p.descricao, p.referencia, p.valor));

        // 3. Recalcular bases
        this.baseFGTS = this.totalProventos;
        this.baseINSS = this.totalProventos;

        // 4. Adicionar INSS
        const inss = CalculadoraFolha.calcularINSS(this.baseINSS);
        if (inss > 0) {
          this.adicionarDesconto('301', 'INSS', 'Tabela', inss.toFixed(2));
        }

        // 5. Recalcular base IRRF (Total Proventos - Desconto INSS)
        const inssDesconto = this.descontos.find(d => d.codigo === '301')?.valor || 0;
        this.baseIRRF = this.totalProventos - inssDesconto;

        // 6. Adicionar IRRF
        const irrf = CalculadoraFolha.calcularIRRF(this.baseIRRF, this.dependentes);
        if (irrf > 0) {
          this.adicionarDesconto('302', 'IRRF', 'Tabela', irrf.toFixed(2));
        }

        // 7. Adicionar descontos manuais (mantidos)
        descontosManuais.forEach(d => this.adicionarDesconto(d.codigo, d.descricao, d.referencia, d.valor));
      }
    }

